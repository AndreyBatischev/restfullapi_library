<!-- books.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <link rel="stylesheet" href="../styles/main.css">
  <title>Library - Books</title>
</head>
<body>
  <h1>Books</h1>
  <div class="book-list">
        <% books.forEach((book) => { %>
            <div class="book-item">
                <h2 class="book-title"><%= book.title %></h2>
                <p class="book-author">Author: <%= book.author %></p>
                <p class="book-genre">Genre: <%= book.genre %></p>
                <p class="book-year">Year: <%= book.year %></p>
                <p class="book-publisher">Publisher: <%= book.publisher %></p>
                <p class="book-description">Description: <%= book.description %></p>
            </div>
        <% }) %>
    </div>
</body>
<style>
  body{
    padding: 50px;
  }
  .book-list {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    margin-bottom: 20px;
    justify-content: space-between;

}

.book-item {
    background-color: #f8f8f8;
    padding: 20px;
    border: 1px solid #ccc;
    border-radius: 4px;
    max-width: 300px;
    min-width: 250px;
}

.book-title {
    margin-top: 0;
}

.book-author,
.book-genre,
.book-year,
.book-publisher,
.book-description {
    margin-bottom: 0;
}
</style>
</html>
